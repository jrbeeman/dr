  if ($op == 'list') {
    return array(
      'terms' => array(
        'info' => t('Quick taxonomy edit'),
      ),
    );
  }

  if ($op == 'view') {
    switch ($delta) {
      case 'terms':
        $content = dr_block_terms();
        if ($content) {
          return array(
            'subject' => t('Taxonomy'),
            'content' => $content,
          );
        }
        break;
    }
  }
}

