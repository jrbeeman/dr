function dr_report_taxonomy_filter($form_state, $vid = NULL) {
  $vocabs = taxonomy_get_vocabularies();
  $options = array();
  foreach ($vocabs as $vocab) {
    $options[$vocab->vid] = $vocab->name;
  }
  $form = array(
    '#prefix' => '<div class="container-inline">', 
    '#suffix' => '</div>',
  );
  $form['vid'] = array(
    '#type' => 'select',
    '#title' => t('Vocabulary'),
    '#options' => $options,
    '#default_value' => $vid,
  );
  $form['limit'] = array(
    '#type' => 'textfield',
